{% extends 'fweberBackendBundle::layout.html.twig' %}

{% block currentPage %}posts{% endblock %}

{% block content %}

    <h2>
        <span class="glyphicon glyphicon-th-list"></span>
        <a href="{{ path('backend_posts_collection') }}">Posts</a>
        /
        <span class="text-danger">Delete Post</span>
    </h2>

    <div class="panel panel-danger">
        <div class="panel-body">
            Do you really want to delete the Post <span class="label label-danger">{{ post.title }}</span>?

            <br>
            <br>

            <form method="post">
                <a class="btn btn-default" href="{{ path('backend_posts_collection') }}">
                    <i class="fa fa-chevron-left"></i>
                    Back
                </a>
                <input type="hidden" value="1" name="sent">
                <button type="submit" class="btn btn-danger">Delete</button>
            </form>
        </div>
    </div>

{% endblock %}
