<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8"/>
    <title>{% block title %}Florian Weber | biesti.com{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <!-- CSS -->
    <link rel="stylesheet" type="text/css" href="{{ app.request.baseUrl }}/assets/css/bootstrap.min.css"/>
    <link rel="stylesheet" type="text/css" href="{{ app.request.baseUrl }}/assets/css/docs.min.css"/>
    <link rel="stylesheet" type="text/css" href="{{ app.request.baseUrl }}/assets/css/global.css"/>
    <link rel="stylesheet" type="text/css" href="{{ app.request.baseUrl }}/assets/css/app.css"/>

    <!-- FONTS -->
    <script src="//use.edgefonts.net/abel:n4:all.js"></script>
    <script src="//use.edgefonts.net/poiret-one:n4:all.js"></script>
    <script src="//use.edgefonts.net/source-sans-pro.js"></script>
    <script src="//use.edgefonts.net/pt-sans-narrow:n4,n7:all.js"></script>
</head>
<body>

<span class="hidden" id="current-page">{% block currentPage %}{% endblock %}</span>

<div id="wrap">
    <nav class="navbar navbar-default navbar-static-top visible-xs" role="navigation">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse"
                        data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">Florian Weber</a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li class="nav-link" id="nbl-portfolio"><a href="{{ app.request.baseUrl }}/portfolio">Portfolio</a></li>
                    {#<li class="nav-link" id="nbl-contact"><a href="{{ app.request.baseUrl }}/kontakt">Kontakt</a></li>#}
                </ul>

                <ul class="nav navbar-nav navbar-right">
                    <li class="nav-link" id="nbl-imprint"><a href="{{ app.request.baseUrl }}/impressum">Impressum</a></li>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container-fluid -->
    </nav>

    <div class="container">
        <div class="row">
            <div class="col-lg-12">

                <div class="head hidden-xs">
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6 bottom-line">
                            <div class="logo pt-sans-narrow-font">
                                <a href="{{ app.request.baseUrl }}">Florian Weber</a>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6 bottom-line navigation">
                            <ul class="navigator pull-right">
                                <li class="nav-link" id="nl-portfolio"><a href="{{ app.request.baseUrl }}/portfolio">Portfolio</a></li>
                                {#<li class="nav-link" id="nl-contact"><a href="{{ app.request.baseUrl }}/contact">Contact</a></li>#}
                                <li class="nav-link" id="nl-imprint"><a href="{{ app.request.baseUrl }}/imprint">Imprint</a></li>
                            </ul>
                        </div>
                    </div>
                </div>

                <div class="content">
                    {% block app %}{% endblock %}
                </div>

            </div>
        </div>
    </div>
</div>
    
<div id="footer">
    <div class="container">
        <div class="centered copyright">
            <p class="text-muted credit">&copy; {{ "now"|date('Y') }}, Florian Weber | <a href="{{ app.request.baseUrl }}/">Home</a></p>
        </div>
    </div>
</div>

<!-- JS -->
<script src="{{ app.request.baseUrl }}/assets/js/lib/jquery-1.11.0.min.js"></script>
<script src="{{ app.request.baseUrl }}/assets/js/lib/bootstrap.min.js"></script>
<script src="{{ app.request.baseUrl }}/assets/js/app.js"></script>

</body>
</html>